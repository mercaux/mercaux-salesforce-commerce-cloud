<isif condition="${price.type === 'tiered'}">
    <div class="price">
        <isinclude template="modal/product/components/pricing/tiered" />
    </div>
<iselseif condition="${price.type === 'range'}">
    <div class="price">
        <isinclude template="modal/product/components/pricing/range" />
    </div>
<iselse>
    <div class="price">
        <isset name="isLowPrice" value="${}" scope="page" />
        <isinclude template="modal/product/components/pricing/default" />
    </div>
</isif>
