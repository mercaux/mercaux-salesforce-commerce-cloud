<?xml version="1.0" encoding="UTF-8"?>
<slot-configurations xmlns="http://www.demandware.com/xml/impex/slot/2008-09-08">

    <slot-configuration slot-id="homepage-mercaux-looks-slider" context="global" configuration-id="homepage-looks-slider-category-block" assigned-to-site="true">
        <description>Show Looks Slider with populated Random Amount from selected Category. 

P.s Amount of products in the slider, you can set up in Custom Preferences/Looks Slider Category Slot Settings</description>
        <template>slots/homepage-looks-slider-slot-category.isml</template>
        <enabled-flag>false</enabled-flag>
        <content>
            <categories>
                <category category-id="Looks"/>
            </categories>
        </content>
    </slot-configuration>

    <slot-configuration slot-id="homepage-mercaux-looks-slider" context="global" configuration-id="homepage-looks-slider-product-ids-block" assigned-to-site="true">
        <description>Show Looks slider with selected Product IDs at the Homepage</description>
        <template>slots/homepage-looks-slider-slot.isml</template>
        <enabled-flag>true</enabled-flag>
        <content></content>
    </slot-configuration>

</slot-configurations>
